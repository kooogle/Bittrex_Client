<%= content_for(:title,  '活动挂单列表 | BLOCK') %>
<section class="content-header">
  <h1>
    活动挂单 <small>信息预览</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-btc"></i> Dashboard</a></li>
    <li class="active"><i class="fa fa-btc"></i> 活动挂单</li>
  </ol>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-body">
      <div class="row">
        <div class="col-sm-12">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
            <tr>
              <th tabindex="0" aria-controls="example1" style="text-align: center">市场</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">类型</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">待售</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">数量</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">单价</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">价值</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center;width: 240px">操作</th>
            </tr>
            </thead>
            <tbody>
            <% @orders.each do |item| %>
              <tr style="text-align: center">
                <td><%= item['Exchange'] %></td>
                <td><%= item['OrderType'] %></td>
                <td><%= item['QuantityRemaining'] %></td>
                <td><%= item['Quantity'] %></td>
                <td><%= item['Limit'] %></td>
                <td><%= (item['Limit'] * item['Quantity'] * 0.9975).round(2) %></td>
                <td>
                  <a href="<%= cancel_blocks_orders_path(uuid:item['OrderUuid']) %>" class="btn bg-aqua btn-flat">
                    <i class="fa fa-shower"></i>
                    撤单
                  </a>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-5">
          <div class="dataTables_info" id="example1_info" role="status" aria-live="polite"><h5>总计：「<%= @orders.count %>」</h5></div>
        </div>
      </div>
    </div>
  </div>
</section>