<%= form_for(['blocks',@point]) do |f| %>
<div class="box-body">
  <div class="col-md-5">
    <div class="form-group has-error">
      <label>区块</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-btc"></i>
        </div>
        <%= f.select(:chain_id, Chain.named.map{|x| [x.full_name,x.id]}, {prompt:'请选择区块'},{:class => 'form-control'}) %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>权重</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-hourglass-1"></i>
        </div>
        <%= f.text_field :weights, class:'form-control', placeholder:'（必填* 持有的区块货币占比）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>总量</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-pie-chart"></i>
        </div>
        <%= f.text_field :total_amount, class:'form-control', placeholder:'（必填* 持有的货币最大数量）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>总值</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-cc-mastercard"></i>
        </div>
        <%= f.text_field :total_value, class:'form-control', placeholder:'（必填* 持有量总价值）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>单位</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-star-o"></i>
        </div>
        <%= f.text_field :unit, class:'form-control', placeholder:'（必填* 交易基础数量值）' %>
      </div>
    </div>

  </div>
  <div class="col-md-12">
    <hr>
    <div>
      <button type="submit" class="btn bg-maroon btn-flat" style="width: 120px">提交</button>
      <a href="<%= request.referrer %>" class="btn bg-navy btn-flat" style="width: 120px">取消</a>
    </div>
  </div>
</div>
<% end %>