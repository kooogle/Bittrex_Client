<%= form_for(['blocks',@balance]) do |f| %>
<div class="box-body">
  <div class="col-md-5">
    <div class="form-group has-error">
      <label>区块</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-codepen"></i>
        </div>
        <%= f.text_field :block, class:'form-control', placeholder:'（必填* 区块名称）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>总量</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-cc"></i>
        </div>
        <%= f.text_field :balance, class:'form-control', placeholder:'（必填* 区块总数）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>可用</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-cny"></i>
        </div>
        <%= f.text_field :available, class:'form-control', placeholder:'（必填* 可用数量）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>挂单</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-plane"></i>
        </div>
        <%= f.text_field :pending, class:'form-control', placeholder:'（必填* 挂单数量）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>地址</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-barcode"></i>
        </div>
        <%= f.text_field :address, class:'form-control', placeholder:'（必填* 货币地址）' %>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <hr>
    <div>
      <button type="submit" class="btn bg-maroon btn-flat" style="width: 120px">提交</button>
      <a href="<%= request.referrer %>" class="btn bg-navy btn-flat" style="width: 120px">取消</a>
    </div>
  </div>
</div>
<% end %>