<%= form_for(['blocks',@order]) do |f| %>
<div class="box-body">
  <div class="col-md-5">
    <div class="form-group has-error">
      <label>区块</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-btc"></i>
        </div>
        <%= f.select(:chain_id, Chain.named.map{|x| [x.full_name,x.id]}, {prompt:'请选择区块'},{:class => 'form-control'}) %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>交易</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-gg"></i>
        </div>
        <%= f.select(:deal,[['BUY',1],['SELL',0]], {prompt:'请选择挂单类型'},{:class => 'form-control'}) %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>数量</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-codepen"></i>
        </div>
        <%= f.text_field :amount, class:'form-control', placeholder:'（必填* 区块数量）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>单价</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-cny"></i>
        </div>
        <%= f.text_field :price, class:'form-control', placeholder:'（必填* 挂单价格）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>总计</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-usd"></i>
        </div>
        <%= f.text_field :total, class:'form-control', placeholder:'（必填* 总计价值）' %>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <hr>
    <div>
      <button type="submit" class="btn bg-maroon btn-flat" style="width: 120px">提交</button>
      <a href="<%= request.referrer %>" class="btn bg-navy btn-flat" style="width: 120px">取消</a>
    </div>
  </div>
</div>
<% end %>